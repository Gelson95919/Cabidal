                          <field name="data_fim"/>
                        </div>
                        <div>
                          <label for="title" string="Artigo"/>
                          <label for="title" string="___" style="color:White;"/>
                          <field name="artigo_id" style="width:420px"/>
                        </div>
                        <header>
                          <button name="aceitar" type="object" class="btn-primary" icon="fa-check-square-o" string="Aceitar"/>
