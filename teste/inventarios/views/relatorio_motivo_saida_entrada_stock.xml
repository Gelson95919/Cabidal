<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="relatorio_motivo_form" model="ir.ui.view">
            <field name="name">Relatorio Motivo Saida/Entrada Stock</field>
            <field name="model">relatorio.motivo</field>
            <field name="arch" type="xml">
                <form string="Relatorio Motivo Saida/Entrada Stock">
                    <sheet>
                        <div><label for="title" string="RELATORIO MOTIVO SAIDA/ENTRADA STOCK"/></div>
                        <div><label for="title" style="width:10px" string=""/> </div>
                        <div>
                          <label for="title" string="Motivo"/>
