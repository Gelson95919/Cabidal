                    </sheet>
                </form>
            </field>
        </record>
        <record id="relatorio_motivo_act_window" model="ir.actions.act_window">
            <field name="name">Relatorio Motivo Saida/Entrada Stock</field>
            <field name="type">ir.actions.act_window</field>
