<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="livro_honorario_iva_iur_form" model="ir.ui.view">
           <field name="name">Livros Honorário/IVA/IUR</field>
           <field name="model">livros.honorario.iva.iur</field>
