<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="passagem_marit_form" model="ir.ui.view">
           <field name="name">Passagem Inter Ilhas</field>
           <field name="model">passagem.maritima</field>
           <field name="arch" type="xml">
               <form string="Passagem Inter Ilhas">
                   <sheet>
                       <div>
                           <label for="title" string="Descrição"/>
                           <field name="name" style="width:260px"/>
                       </div>
                       <div>
                           <label for="title" string="Origem"/>
                           <label for="title" string="__"  style="color:White;"/>
                           <field name="origem" style="width:260px"/>
                           <label for="title" string="_______________________________"  style="color:White;"/>
                           <label for="title" string="Destino"/>
                           <field name="destino" style="width:260px"/>
                       </div>
                       <label for="title" string="Tarifa____________________________________________________________________________________________________________________"/>
                       <div>
                           <label for="title" string="_______________________________"  style="color:White;"/>
                       </div>
                       <div>
                           <label for="title" string="Tarifa Base"/>
                           <field name="tarifa_base" style="width:260px"/>
                           <label for="title" string="_______________________________"  style="color:White;"/>
                           <label for="title" string="Agencia"/>
                           <label for="title" string="_"  style="color:White;"/>
                           <field name="agencia" style="width:260px"/>
                       </div>
                       <div>
                           <label for="title" string="Selos"/>
                           <label for="title" string="____"  style="color:White;"/>
                           <field name="selos" style="width:260px"/>
                           <label for="title" string="_______________________________"  style="color:White;"/>
                           <label for="title" string="Impressos"/>
                           <field name="impressos" style="width:260px"/>
                       </div>
                   </sheet>
               </form>
           </field>
       </record>
       <record id="passagem_marit_tree" model="ir.ui.view">
           <field name="name">Passagem Inter Ilhas</field>
           <field name="model">passagem.maritima</field>
           <field name="arch" type="xml">
               <tree string="Passagem Inter Ilhas">
                   <field name="name"/>
               </tree>
           </field>
       </record>
       <record id="passagem_marit_act_window" model="ir.actions.act_window">
           <field name="name">Passagem Inter Ilhas</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">passagem.maritima</field>
           <field name="view_mode">tree,form</field>
           <field name="help" type="html">
             <p class="oe_view_nocontent_create">
               Criar um novo Passagem Maritima.
             </p><p>
                Organize suas atividades (planeje tarefas, acompanhe problemas, planilhas de Passagem Maritima) para projetos internos, pessoais ou de clientes.
             </p>
           </field>
       </record>
       <!-- This Menu Item must have a parent and an action -->
       <menuitem id="passagem_marit_menu" name="Passagem Maritima" parent="fastgest_age_maritima" action="passagem_marit_act_window" sequence="80"/>
    </data>
</odoo>