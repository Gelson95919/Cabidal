<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="tipo_movimento_form" model="ir.ui.view">
           <field name="name">Tipo de Reserva</field>
           <field name="model">tipo.movimento</field>
           <field name="arch" type="xml">
               <form string="Tipo de Reserva">
                   <sheet>
                       <group>
                           <field name="name"/>
                       </group>
                   </sheet>
               </form>
           </field>
       </record>
       <record id="tipo_movimento_tree" model="ir.ui.view">
           <field name="name">Tipo de Reserva</field>
           <field name="model">tipo.movimento</field>
           <field name="arch" type="xml">
               <tree string="Tipo de Reserva">
                   <field name="name"/>
               </tree>
           </field>
       </record>
       <record id="tipo_movimento_act_window" model="ir.actions.act_window">
           <field name="name">Tipo de Reserva</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">tipo.movimento</field>
           <field name="view_mode">tree,form</field>
           <field name="help" type="html">
             <p class="oe_view_nocontent_create">
               Criar um novo Tipo de Reserva.
             </p><p>
                Organize suas atividades (planeje tarefas, acompanhe problemas, planilhas de Tipo de Reserva) para projetos internos, pessoais ou de clientes.
             </p>
           </field>
       </record>
       <!-- This Menu Item must have a parent and an action -->
       <menuitem id="tipo_movimento_menu" name="Tipo Movimento" parent="fastgest_hotel" action="tipo_movimento_act_window" sequence="80"/>
    </data>
</odoo>