<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="zonas_form" model="ir.ui.view">
            <field name="name">Zonas</field>
            <field name="model">zonas.zonas</field>
            <field name="arch" type="xml">
                <form string="Zonas">
                    <sheet>
                        <div>
                            <label for="title" string="CÃ³digo"/>
                            <field name="codigo"/>
                        </div>
                        <div>
                            <label for="title" string="." style="color:White;"/>
                        </div>
                        <div>
                            <label for="title" string="Nome"/>
                            <label for="title" string="___" style="color:White;"/>
                            <field name="name" style="width:950px"/>
                        </div>
                        <div>
                            <label for="title" string="Concelho"/>
                            <field name="concelho" style="width:260px"/>
                            <label for="title" string="__________________________________________________"
                                   style="color:White;"/>
                            <label for="title" string="Freguesia"/>
                            <field name="freguesia" style="width:260px"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="zona_tree" model="ir.ui.view">
            <field name="name">Zona</field>
            <field name="model">zonas.zonas</field>
            <field name="arch" type="xml">
                <tree string="Zona">
                    <field name="codigo"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="sequ_zonas_codigo" model="ir.sequence">
            <field name="name">Zona</field>
            <field name="code">zonas.zonas</field>
            <field name="prefix"></field>
            <field name="padding">2</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="zona_act_window" model="ir.actions.act_window">
            <field name="name">Zona</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">zonas.zonas</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Criar um novo Zonas.
                </p>
                <p>
                    Organize suas atividades (planeje tarefas, acompanhe problemas, planilhas de Zonas) para projetos
                    internos, pessoais ou de clientes.
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="zona_menu" name="Zona" parent="fastgest_gest_microcred_tabelas" action="zona_act_window"
                  sequence="80"/>
    </data>
</odoo>