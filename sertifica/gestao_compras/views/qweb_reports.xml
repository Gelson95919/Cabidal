<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <report
                id="report_session"
                model="despesa.despesa"
                string="Session Report"
                name="gestao_compras.report_session_view1"
                file="gestao_compras.report_session"
                report_type="qweb-pdf"/>

        <template id="report_session_view1">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 t-field="doc.fornec_tercd"/>
                            <p>From
                                <span t-field="doc.n_documento"/>
                                to
                                <span t-field="doc.n_documento"/>
                            </p>
                            <h3>Attendees:</h3>
                            <ul>
                                <t t-foreach="docs" t-as="doc">
                                    <t>
                                        <div class="page">
                                            <h1>Report For
                                                <t t-esc="doc.fornec_tercd"/>
                                            </h1>
                                            <table>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Name</th>
                                                    <th>Date</th>
                                                </tr>

                                                <t t-foreach="doc" t-as="o">
                                                    <tr>
                                                        <td>
                                                            <t t-esc="o.n_documento"/>
                                                        </td>
                                                        <td>
                                                            <t t-esc="o.fornec_tercd"/>
                                                        </td>
                                                        <td>
                                                            <t t-esc="o.data_docum"/>
                                                        </td>
                                                    </tr>
                                                </t>

                                            </table>
                                        </div>
                                    </t>
                                </t>
                            </ul>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
