<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="listagem_despachos_form" model="ir.ui.view">
           <field name="name">Listagem Despacho</field>
           <field name="model">listagem.despachos</field>
           <field name="arch" type="xml">
               <form string="Listagem Despachos">
                   <sheet>
                       <label for="title" string="LISTAGEM DE DESPACHOS" style="font-weight: bold; color:blue"/>
                       <div><label for="title" string=""/> </div>
                       <div><label for="title" string="Tipo" style="font-weight: bold; color:blue"/> </div>
                       <div>
                           <field name="tipo" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>
                           <label for="title" string="" style="width:100px"/>
                           <field name="em_aberto" attrs="{'invisible': [('tipo','=', 'listagem_total')]}"/>
                           <label for="title" string="Em Aberto" attrs="{'invisible': [('tipo','=', 'listagem_total')]}"/>
                       </div>
                       <div><label for="title" string=""/> </div>
                       <div>
                           <field name="por_beneficiario"/>
                           <label for="title" string="Por Beneficiario"/>
                       </div>
                       <div>
                           <field name="terceiro_id" style="width:500px" attrs="{'invisible':[('por_beneficiario','!=', True)]}"/>
                       </div>
                       <div>
                           <field name="uma_folha_por_beneficiario" attrs="{'invisible':[('por_beneficiario','!=', True)]}"/>
                           <label for="title" string="Uma Folha Por Beneficiario" attrs="{'invisible':[('por_beneficiario','!=', True)]}"/>
                       </div>
                       <div><label for="title" string=""/> </div>
                       <div>
                           <label for="title" string="Data"  style="font-weight: bold; color:blue"/>
                       </div>
                       <div>
                           <label for="title" string="De"/>
                           <field name="data_de" style="width:100px"/>
                           <label for="title" string="" style="width:100px"/>
                           <label for="title" string="Ate"/>
                           <field name="data_ate" style="width:100px"/>
                       </div>
                   </sheet>
                   <header>
                      <button name="aceitar" string="Aceitar" type="object" class="btn-primary" icon="fa-check-square-o"/>
                      <button name="ajuda" string="Ajuda" type="object" icon="fa-question-circle" class="btn-primary"/>
                   </header>
               </form>
           </field>
       </record>
       <record id="listagem_despachos_act_window" model="ir.actions.act_window">
           <field name="name">Listagem Despacho</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">listagem.despachos</field>
           <field name="view_id" ref="listagem_despachos_form"/>
           <field name="target">inline</field>
           <field name="view_mode">tree,form</field>
           <field name="help" type="html">
             <p class="oe_view_nocontent_create">
               <!-- Add Text Here -->
             </p><p>
               <!-- More details about what a user can do with this object will be OK -->
             </p>
           </field>
       </record>
       <!-- This Menu Item must have a parent and an action -->
       <menuitem id="listagem_despachos_menu" name="Listagem Despacho" parent="lisatagem_menu" action="listagem_despachos_act_window" sequence="80"/>

    </data>
</odoo>