<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Data records go here -->
        <record id="group_hotel_user" model="res.groups">
            <field name="name">User Cabosys Hotel</field>
            <field name="category_id" ref="base.module_category_hotel"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_hotel_manager" model="res.groups">
            <field name="name">Manager Hotel</field>
            <field name="category_id" ref="base.module_category_hotel"/>
            <field name="implied_ids" eval="[(4, ref('group_hotel_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
    </data>
</odoo>