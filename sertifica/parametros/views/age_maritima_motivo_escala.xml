<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="motivo_escala_form" model="ir.ui.view">
           <field name="name">Motivo Escala</field>
           <field name="model">motivo.escala</field>
           <field name="arch" type="xml">
               <form string="Motivo Escala">
                   <sheet>
                       <group>
                           <field name="name"/>
                       </group>
                   </sheet>
               </form>
           </field>
       </record>
       <record id="motivo_escala_tree" model="ir.ui.view">
           <field name="name">Motivo Escala</field>
           <field name="model">motivo.escala</field>
           <field name="arch" type="xml">
               <tree string="Motivo Escala">
                   <field name="name"/>
               </tree>
           </field>
       </record>
       <record id="motivo_escala_act_window" model="ir.actions.act_window">
           <field name="name">Motivo Escala</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">motivo.escala</field>
           <field name="view_mode">tree,form</field>
           <field name="help" type="html">
             <p class="oe_view_nocontent_create">
               Criar um novo Motivo Escala.
             </p><p>
                Organize suas atividades (planeje tarefas, acompanhe problemas, planilhas de Motivo Escala) para projetos internos, pessoais ou de clientes.
             </p>
           </field>
       </record>
       <!-- This Menu Item must have a parent and an action -->
       <menuitem id="motivo_escala_menu" name="Motivo Escala" parent="fastgest_age_maritima" action="motivo_escala_act_window" sequence="80"/>
    </data>
</odoo>