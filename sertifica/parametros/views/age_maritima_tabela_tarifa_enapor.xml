<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="tarifa_enapor_form" model="ir.ui.view">
           <field name="name">Tarifa Enapor</field>
           <field name="model">tarifa.enapor</field>
           <field name="arch" type="xml">
               <form string="Tarifa Enapor">
                   <sheet>
                       <group>
                           <field name="name"/>
                       </group>
                       <group>
                           <field name="name2"/>
                       </group>
                       <div>
                           <label for="title" string="Unidade Medida"/>
                           <label for="title" string="______"  style="color:White;"/>
                           <field name="unid_medida" style="width:260px"/>
                           <label for="title" string="____________________________"  style="color:White;"/>
                           <label for="title" string="Tarifa por entervalo Valores"/>
                           <label for="title" string="__"  style="color:White;"/>
                           <field name="tarifa_por_entervalo_valores" style="width:260px"/>
                       </div>
                       <div>
                           <label for="title" string="Tarifa"/>
                           <label for="title" string="_______________"  style="color:White;"/>
                           <field name="tarifa" style="width:260px"/>
                           <label for="title" string="____________________________"  style="color:White;"/>
                           <label for="title" string="Tarifa x c/Dia Extra"/>
                           <label for="title" string="_________"  style="color:White;"/>
                           <field name="tarifa_x_cdia_extra" style="width:260px"/>
                       </div>
                       <field name="mult">
                         <tree editable="bottom" string="Detalhes">
                             <field name="medida_maxima" />
                             <field name="medida_minima"/>
                             <field name="taxa" />
                         </tree>
                       </field>
                   </sheet>
               </form>
           </field>
       </record>
       <record id="tarifa_enapor_tree" model="ir.ui.view">
           <field name="name">Tarifa Enapor</field>
           <field name="model">tarifa.enapor</field>
           <field name="arch" type="xml">
               <tree string="Tarifa Enapor">
                   <field name="name"/>
                   <field name="name2"/>
                   <field name="unid_medida"/>
                   <field name="tarifa"/>
               </tree>
           </field>
       </record>

       <record id="tarifa_enapor_act_window" model="ir.actions.act_window">
           <field name="name">Tarifa Enapor</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">tarifa.enapor</field>
           <field name="view_mode">tree,form</field>
           <field name="help" type="html">
             <p class="oe_view_nocontent_create">
               Criar um novo Tarifa Enapor.
             </p><p>
                Organize suas atividades (planeje tarefas, acompanhe problemas, planilhas de Tarifa Enapor) para projetos internos, pessoais ou de clientes.
             </p>
           </field>
       </record>
       <!-- This Menu Item must have a parent and an action -->
       <menuitem id="tarifa_enapor_menu" name="Tarifa Enapor" parent="fastgest_age_maritima" action="tarifa_enapor_act_window" sequence="80"/>
    </data>
</odoo>