<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="report.paperformat" id="paperformat_list_folha_tesoura_report">
            <field name="name">paperformat.attendance.recap.report</field>
            <field name="default" eval="True"/>
            <field name="format">A3</field>
            <field name="page_width">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_right">5</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
        </record>
        <report
                id="listagem_folha_tesouraria_report"
                model="listagem.folha.tesouraria"
                string="Listagem Folha Tesoura"
                name="gestao_tesouraria.listagem_folha_tesoura_report_view"
                file="gestao_microfinancas.form_all_list_folha_teso"
                paperformat="paperformat_list_folha_tesoura_report"
                report_type="qweb-pdf"
                menu="False"/>

        <template id="listagem_folha_tesoura_report_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="p">
                    <t t-call="web.external_layout">
                        <div style="border:0px solid black; text-center; margin-left: -1px; height: 43px; margin-top:3px;  width:100%; display: -webkit-box;
                                                                         -webkit-box-orient: horizontal; -webkit-box-pack: center;
                                                                          display: -moz-box; -moz-box-orient: horizontal;  -moz-box-pack: center;">
                            <strong>
                                <h5>SOLMI-Associação de Apoio as Iniciativas de Autopromoção</h5>
                            </strong>
                        </div>
                        <div style="border:0px solid black; text-center; margin-left: -1px; height: 36px; margin-top:10px;  width:100%; display: -webkit-box;
                                                                         -webkit-box-orient: horizontal; -webkit-box-pack: center;
                                                                          display: -moz-box; -moz-box-orient: horizontal; -moz-box-pack: center;">
                            <strong>
                                <p>
                                    <h3>
                                        LISTAGEM DAS FOLHAS DE TESOURARIA
                                    </h3>
                                </p>
                            </strong>
                        </div>
                        <div style="border:0px solid black; text-center; margin-left: -1px; height: 36px; margin-top:10px;  width:100%; display: -webkit-box;
                                                                         -webkit-box-orient: horizontal; -webkit-box-pack: center;
                                                                          display: -moz-box; -moz-box-orient: horizontal; -moz-box-pack: center;">
                            <p>
                                <strong>De:
                                    <t t-esc="date_start"/>
                                    Ate:
                                    <t t-esc="date_end"/>
                                </strong>
                            </p>
                        </div>
                        <div style="width: 100%; margin-top:20px; ">
                            <table class="table table-condensed table-bordered" style="width: 100%">
                                <thead>
                                    <th class="text-left" style="border:1px solid black; width: 15%">Movimento</th>
                                    <th class="text-left" style="border:1px solid black; width: 15%">Entrada</th>
                                    <th class="text-left" style="border:1px solid black; width: 30%">Saida</th>
                                    <th class="text-left" style="border:1px solid black; width: 15%">SAldo Atn.</th>
                                    <th class="text-left" style="border:1px solid black; width: 15%">Fechado</th>
                                    <th class="text-left" style="border:1px solid black; width: 10%">Data</th>
                                </thead>
                                <tbody>
                                    <t t-foreach="docs" t-as="o">
                                        <tr>
                                            <td class="text-left">
                                                <span t-esc="o['movimento']"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-esc="o['tot_parc_entrada']"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-esc="o['tot_parc_saida']"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-esc="o['saldo_ant']"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-esc="o['fechado']"/>
                                            </td>
                                            <td class="text-left">
                                                <span t-esc="o['data']"/>
                                            </td>
                                        </tr>
                                    </t>

                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
