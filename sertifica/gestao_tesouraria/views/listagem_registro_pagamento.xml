<odoo>
    <data>
        <record model="ir.ui.view" id="form_all_list">
            <field name="name">Listagem Registro Pagamentos</field>
            <field name="model">litregpag.litregpag</field>
            <field name="arch" type="xml">
                <form string="Listagem Registro">
                    <header>
                        <button name="get_report" string="Listar" type="object" class="oe_highlight" icon="fa-print"/>
                        <button string="Cancel" special="cancel"/>
                    </header>
                    <sheet>
                        <div>
                            <label for="title" string="Listagem de Registro de Pagamento"/>
                        </div>
                        <label for="title" style="width:450px" string=""/>
                        <div>
                            <label for="title" string="De" style="width:25px"/>
                            <field name="date_start"/>
                            <label for="title" string="" style="width:300px"/>
                            <label for="title" string="Ate" style="width:25px"/>
                            <field name="date_end"/>
                        </div>

                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_window_lista">
            <field name="name">Listagem de Pagamentos</field>
            <field name="res_model">litregpag.litregpag</field>
            <field name="view_id" ref="form_all_list"/>
            <field name="target">inline</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Realizar um novo Listagem .
                </p>
                <p>
                    Organize suas atividades (planeje tarefas, acompanhe problemas, planilhas de listagem) para projetos
                    internos, pessoais ou de clientes.
                </p>
            </field>
        </record>
        <menuitem name="Listagem de Pagamentos" id="menu_lista_list" parent="gestao_tesouraria.menu_2"
                  action="action_window_lista"/>
    </data>
</odoo>
