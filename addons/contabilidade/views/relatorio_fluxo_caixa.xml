<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="relatorio_fluxo_caixa_form" model="ir.ui.view">
           <field name="name">Relatorio.fluxo.Caixa.form</field>
           <field name="model">relatorio.fluxo.caixa</field>
           <field name="arch" type="xml">
               <form string="Relatorio Fluxo Caixa">
                   <sheet>
                     <div><label for="title" string="RELATORIO FLUXO DE CAIXA"/></div>
                     <label for="title" style="width:450px" string=""/>
                     <group col ="3">
                       <group>
                           <field name="tipo" widget="radio" nolabel='1' options="{'horizontal': true}"/>
                       </group>
                       <group>
                          <label for="title" string="___________________________________________________________________________________________________________________________________________________________"/>
                       </group>
                       <group string="Periodo">
                           <field name="mes__tot_interval" widget="radio" nolabel='1' options="{'horizontal': true}"/>
                           <field name="mes_de" attrs="{'readonly': [('mes__tot_interval', '!=', 'intervalo')]}"/>
                           <field name="mes_ate" attrs="{'readonly': [('mes__tot_interval', '!=', 'intervalo')]}"/>
                       </group>
                       <group string="Opção">
                           <field name="muda_pagina"/>
                           <field name="mueda_estrangeiro"/>
                           <field name="editar_relatorio"/>
                       </group>
                         <group string="Codigo">
                            <field name="cod_intr__alt" widget="radio" nolabel='1' options="{'horizontal': true}"/>
                            <field name="cod_intr__alt_de" attrs="{'readonly': [('cod_intr__alt', '!=', 'intervalo')]}"/>
                            <field name="cod_intr__alt_ate" attrs="{'readonly': [('cod_intr__alt', '!=', 'intervalo')]}"/>
                           <field name="alternado" widget = 'many2many_tags' attrs="{'readonly': [('cod_intr__alt', '!=', 'alternado')]}" options="{'no_create':True}"/>
                         </group>
                     </group>
                     <header>
                           <button name="aceitar" icon="fa-check-square" type="object" string="Aceitar"  class="btn-primary"/>
                           <button name="action_quotation_send" string="Ajuda" type="object" icon="fa-question-circle" class="btn-primary"/>
                     </header>
                   </sheet>
               </form>
           </field>
       </record>
       <record id="relatorio_fluxo_caixa_formact_window" model="ir.actions.act_window">
           <field name="name">Relatorio Fluxo Caixa</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">relatorio.fluxo.caixa</field>
           <field name="view_id" ref="relatorio_fluxo_caixa_form"/>
           <field name="target">inline</field>
           <field name="view_mode">tree,form</field>
           <field name="help" type="html">
             <p class="oe_view_nocontent_create">
               <!-- Add Text Here -->
             </p><p>
               <!-- More details about what a user can do with this object will be OK -->
             </p>
           </field>
       </record>
       <!-- This Menu Item must have a parent and an action -->
       <menuitem id="menu_relatorio_fluxo _caixa" name="Relatorio Fluxo Caixa" parent="contabilidade.menu_1" action="relatorio_fluxo_caixa_formact_window" sequence="80"/>
    </data>
</odoo>