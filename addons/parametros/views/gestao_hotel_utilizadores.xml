<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="utilizadores_form" model="ir.ui.view">
           <field name="name">Utilizadores</field>
           <field name="model">utilizadores.utilizadores</field>
           <field name="arch" type="xml">
               <form string="Utilizadores">
                   <sheet>
                       <div>
                           <label for="title" string="Descrição"/>
                           <label for="title" string=""  style="width:25px"/>
                           <field name="name" style="width:835px"/>
                       </div>
                       <div>
                           <label for="title" string="Utilizador"/>
                           <label for="title" string=""  style="width:25px"/>
                           <field name="utilizador" style="width:260px"/>
                           <label for="title" string=""  style="width:250px"/>
                           <label for="title" string="Confirmar"/>
                           <field name="confirmar" style="width:260px"/>
                       </div>
                       <div>
                           <label for="title" string="Palavra-Passe"/>
                           <field name="palavra_passe" style="width:260px"/>
                           <label for="title" string=""  style="width:250px"/>
                           <label for="title" string="Activo"/>
                           <field name="ativo" style="width:260px"/>
                       </div>
                       <div>
                           <label for="title" string=""  style="width:300px"/>
                       </div>
                      <header>
                         <button name="selectTudo" string="Selec.Tud" type="object" class="btn-primary"/>
                         <button name="deselcTudo" string="Desc.Tudo" type="object" class="btn-primary"/>
                         <button name="perfiles" string="Perfiles" type="object" class="btn-primary"/>
                      </header>
                       <div>
                           <label for="title" string=""  style="width:300px"/>
                       </div>
                       <div>
                            <field name="obs" style="width:950px"/>
                       </div>
                   </sheet>
               </form>
           </field>
       </record>
        <record id="utilizadores_tree" model="ir.ui.view">
            <field name="name">Utilizadores</field>
            <field name="model">utilizadores.utilizadores</field>
            <field name="arch" type="xml">
                <tree string="Utilizadores">
                    <field name="name"/>
                </tree>
            </field>
        </record>
       <record id="utilizadores_act_window" model="ir.actions.act_window">
           <field name="name">Utilizadores</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">utilizadores.utilizadores</field>
           <field name="view_mode">tree,form</field>
           <field name="help" type="html">
             <p class="oe_view_nocontent_create">
              Criar um novo Utilizadores.
             </p><p>
              Organize suas atividades (planeje tarefas, acompanhe problemas, planilhas de Tipo Consumo) para projetos internos, pessoais ou de clientes.
             </p>
           </field>
       </record>
        <!-- This Menu Item must have a parent and an action -->
       <menuitem id="utilizadores_menu" name="Utilizadores" parent="fastgest_hotel" action="utilizadores_act_window" sequence="10"/>
    </data>
</odoo>