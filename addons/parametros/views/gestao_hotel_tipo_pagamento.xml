<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="tipo_pagamento_form" model="ir.ui.view">
           <field name="name">Tipo Pagamentos</field>
           <field name="model">tipo.pagamento</field>
           <field name="arch" type="xml">
               <form string="Tipo Pagamentos">
                   <sheet>
                       <group>
                           <field name="name"/>
                       </group>
                   </sheet>
               </form>
           </field>
       </record>
       <record id="tipo_pagamento_tree" model="ir.ui.view">
           <field name="name">Tipo Pagamentos</field>
           <field name="model">tipo.pagamento</field>
           <field name="arch" type="xml">
               <tree string="Tipo Pagamento">
                   <field name="name"/>
               </tree>
           </field>
       </record>
       <record id="tipo_pagamento_act_window" model="ir.actions.act_window">
           <field name="name">Tipo Pagamentos</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">tipo.pagamento</field>
           <field name="view_mode">tree,form</field>
           <field name="help" type="html">
             <p class="oe_view_nocontent_create">
               Criar um novo Tipo de Pagamentos.
             </p><p>
                Organize suas atividades (planeje tarefas, acompanhe problemas, planilhas de Tipo de Pagamentos) para projetos internos, pessoais ou de clientes.
             </p>
           </field>
       </record>
      <!-- This Menu Item must have a parent and an action -->
      <menuitem id="tipo_pagamento_menu" name="Tipo Pagamentos" parent="fastgest_hotel" action="tipo_pagamento_act_window" sequence="80"/>
    </data>
</odoo>