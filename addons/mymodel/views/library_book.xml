<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <act_window id="library_book_action" name="Library Books" res_model="library.book"/>
        <menuitem id="library_book_menu" name="biblioteca" action="library_book_action" parent="mymodel_menu"
                  sequence="5"/>
        <!--Formulario-->
        <record id="library_book_view_form" model="ir.ui.view">
            <field name="name">Library Book Form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="autor_ids" widget="many2many_tags"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="date_release"/>
                                <field name="retail_price"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Lista-->
        <record id="library_book_view_tree" model="ir.ui.view">
            <field name="name">Library Book List</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_release"/>
                </tree>
            </field>
        </record>
        <!--Pesquisa-->
        <record id="library_book_view_search" model="ir.ui.view">
            <field name="name">Library Book Search</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="autor_ids"/>
                    <!--<filter string="No Authors" domain="[('autor_ids','=',False)]"/>-->
                </search>
            </field>
        </record>

        <act_window id="return_wizark_action" name="Return Wizard" res_model="library.returns.wizard"/>
        <menuitem id="return_wizark_menu" name="Assistente devoluções biblioteca" action="return_wizark_action"
                  parent="mymodel_menu"
                  sequence="5"/>
        <!--Formulario-->
        <record id="return_wizard_view_form" model="ir.ui.view">
            <field name="name">Assistente devoluções de biblioteca</field>
            <field name="model">library.returns.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div>
                            <label for="title" string="Membro"/>
                            <field name="member_id" style="width:300px"/>
                        </div>
                        <div>
                            <label for="title" string="  "/>
                        </div>
                        <div>
                            <field name="book_ids"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Lista-->
        <record id="return_wzard_view_tree" model="ir.ui.view">
            <field name="name">Assistente devoluções de biblioteca</field>
            <field name="model">library.returns.wizard</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="member_id"/>
                    <field name="book_ids"/>
                </tree>
            </field>
        </record>
