<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="report.paperformat" id="paperformat_conta_corrente_report">
            <field name="name">paperformat.attendance.recap.report</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_width">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_right">5</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">5</field>
            <field name="header_line" eval="True"/>
            <field name="header_spacing">30</field>
            <field name="dpi">90</field>
        </record>
        <report
                id="rep_conta_corrente"
                model="contcore.contcore"
                string="Conta Corrente"
                name="gestao_tesouraria.rep_conta_corent_view"
                file="gestao_tesouraria.form_all_contcore"
                paperformat="paperformat_conta_corrente_report"
                report_type="qweb-pdf"
                menu="True"/>

        <template id="rep_conta_corent_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div style="border:0px solid black; text-center; margin-left: -1px; height: 43px; margin-top:3px;  width:100%; display: -webkit-box;
                                                                         -webkit-box-orient: horizontal; -webkit-box-pack: center;
                                                                          display: -moz-box; -moz-box-orient: horizontal;  -moz-box-pack: center;">
                            <strong>
                                <h5>SOLMI-Associação de Apoio as Iniciativas de Autopromoção</h5>
                            </strong>
                        </div>
                        <div style="border:0px solid black; text-center; margin-left: -1px; height: 36px; margin-top:10px;  width:100%; display: -webkit-box;
                                                                         -webkit-box-orient: horizontal; -webkit-box-pack: center;
                                                                          display: -moz-box; -moz-box-orient: horizontal; -moz-box-pack: center;">
                            <strong>
                                <p>
                                    <h3>Conta Corrente Nº
                                        <span t-esc="o.numero"/>
                                    </h3>
                                </p>
                            </strong>
                        </div>
                        <div style="border:0px solid black; text-center; margin-left: -1px; height: 36px; margin-top:1px;  width:100%; display: -webkit-box;
                                                                         -webkit-box-orient: horizontal; -webkit-box-pack: center;
                                                                          display: -moz-box; -moz-box-orient: horizontal; -moz-box-pack: center;">
                            <strong>
                                <p>
                                    <h3>
                                        <span t-esc="o.name"/>

                                    </h3>
                                </p>
                            </strong>
                        </div>
                        <div style="width: 860px; width: 100%; margin-top:10px; ">
                            <table class="table table-condensed table-bordered" style="width: 100%">
                                <thead>
                                    <th class="text-left" style="width: 15%">Data</th>
                                    <th class="text-center" style="width: 40%">Descrição.</th>
                                    <th class="text-center" style="width: 15%">Debito</th>
                                    <th class="text-center" style="width: 15%">Credito</th>
                                    <th class="text-center" style="width: 15%">Saldo</th>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.reg_docum_ids" t-as="pl">
                                        <tr>
                                            <td>
                                                <span t-esc="pl.data_realise"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-esc="pl.cod_documento"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-esc="pl.debito"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-esc="pl.credito"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-esc="pl.saldar"/>
                                            </td>
                                        </tr>
                                    </t>

                                </tbody>

                            </table>
                            <div class="col-xs-5"
                                 style="border:0px solid black; width: 100%; height: 45px; margin-top: -10px;">
                                <div style="border:0px solid black; width:150px; height: 30px; margin-left:2px;">
                                    <th>Totais Parciais</th>
                                </div>
                                <div style="border:0px solid black;  width:130px; margin-top: -25px; height: 40px; margin-left:55%;">
                                    <strong>
                                        <p class="text-center">
                                            <span t-esc="o.tot_parc_debito"/>
                                        </p>
                                    </strong>
                                </div>
                                <div style="border:0px solid black; width:53px; height: 40px; margin-top: -45px; margin-left:75%;">
                                    <strong>
                                        <p class="text-center">
                                            <span t-esc="o.tot_parc_credito"/>
                                        </p>
                                    </strong>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
